<script type="text/javascript">
    $(document).ready(function(){
        console.log("footer");
        // 延时清除掉成功、失败提示信息
        (function(){
            var $msg = $("#alert-msg");
            if($msg.length > 0 ){
                $msg.transition('fade right', function(){
                    setTimeout(function(){
                        $msg.transition("slide down");
                    }, 3000);
                });
            }
        })();

        //  点击按钮弹出下拉框
        $('.ui.dropdown').dropdown();

        // 鼠标悬浮在头像上，弹出气泡提示框
        $('.post-content .avatar-link').popup({
            inline: true,
            position: 'bottom right',
            lastResort: 'bottom right'
        });
    });
</script>

</body>

